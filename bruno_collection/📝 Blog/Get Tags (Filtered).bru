tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });

  test("Response success is true", function() {
    const body = res.getBody();
    expect(body.success).to.be.true;
  });

  test("Response has tags array", function() {
    const body = res.getBody();
    expect(body.data).to.exist;
    expect(body.data.tags).to.be.an('array');
  });

  test("Tag count payload shape is valid", function() {
    const body = res.getBody();
    const tags = body.data.tags;

    if (tags.length > 0) {
      const first = tags[0];
      expect(first).to.have.property('tag');
      expect(first).to.have.property('count');
    }
  });
}

