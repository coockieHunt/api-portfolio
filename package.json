{
  "version": "2.0.0",
  "main": "app.js",
  "type": "module",
  "name": "mail-api",
  "overrides": {
    "esbuild": "^0.25.0"
  },
  "scripts": {
    "start": "tsx app.ts",
    "kill-port": "fuser -k 3001/tcp || true",
    "dev": "npm run kill-port && nodemon --signal SIGTERM --watch . --ext ts,js,json --exec 'node --import tsx app.ts'",
    "hash": "node ./scripts/generateHash.js",
    "build": "tsup app.ts jobs/FallbackCache.jobs.ts --format esm --outDir dist"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@vercel/og": "^0.8.6",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.6.0",
    "body-parser": "^2.2.2",
    "bree": "^9.2.9",
    "chalk": "^5.6.2",
    "config": "^4.1.1",
    "consola": "^3.4.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "nodemon": "^3.1.11",
    "react": "^19.2.3",
    "redis": "^5.10.0",
    "sharp": "^0.34.5",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@breejs/ts-worker": "^2.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/config": "^3.3.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.8",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.5",
    "@types/react": "^19.2.8",
    "drizzle-kit": "^0.31.8",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
